{if $page->metakeys}<meta name="keywords" content="{$metakeys}">{/if}

{if $settings['appearance:paths:favicon:ico']}
    <link rel="shortcut icon" href="/images/paths/{$settings['appearance:paths:favicon:ico']}" type="image/x-icon"/>
{/if}

