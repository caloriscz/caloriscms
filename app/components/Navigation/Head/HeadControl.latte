<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>{$title} | {$settings['site:title']}</title>
<link rel="stylesheet" href="/css/front.css" type="text/css">

{if $page->title}<meta property="og:title" content="{$title}">{/if}
{if $page->metadesc}<meta property="og:description" content="{$metadesc}">{/if}
