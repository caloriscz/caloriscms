{block #menu}
    <ul>
        {foreach $menu as $item}
            <li><span>
                        <a href="{plink ':Admin:Settings:global', (expand) $args, id => $item->id}">
                            {if $idActive == $item->id}
                            <strong>{/if}{$item->title}{if $idActive == $item->id}</strong>
                            {/if}
                        </a>
                    {php $selection = $item->related('settings_categories','parent_id')}
                    {if $selection->count() > 0}
                        {include #menu, menu => $selection}
                    {/if}
            </li>
        {/foreach}
    </ul>
{/block}