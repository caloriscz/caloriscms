                    <div class="card-header">Váš profil</div>
                    <div class="card-block">
                        {if $isLoggedIn}
                           {control editProfile}
                        {/if}
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">Změna hesla</div>
                    <div class="card-block">
                        {if $isLoggedIn}
                            {control profileChangePassword}
                        {/if}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>