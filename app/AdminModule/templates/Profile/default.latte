{block #titles}{_dictionary.main.profile|firstUpper}{/block}
{block content}

<ol class="breadcrumb">
    <li class="breadcrumb-item">Home</li>
    <li class="breadcrumb-item"><a href="/admin/">Admin</a></li>
    <li class="breadcrumb-item"><a href="/admin/settings/">{_dictionary.main.Settings}</a></li>
    <li class="breadcrumb-item" class="active"><a href="/admin/profile/">{_dictionary.main.profile|firstUpper}</a></li>
</ol>

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">Profil</div>
                    <div class="card-block">
                        {if $isLoggedIn}
                            <table class="table">
                                <tbody>
                                <tr>
                                    <td>{_dictionary.main.member|firstUpper}</td>
                                    <td>{$member->username}</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>{_dictionary.main.email|firstUpper}</td>
                                    <td>{$member->email}</td>
                                    <td></td>
                                </tr>
                                </tbody>
                            </table>

                            {control editProfile}

                        {/if}
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">{_store.profile.PasswordChange}</div>
                    <div class="card-block">
                        {if $isLoggedIn}
                            {control profileChangePassword}
                        {/if}
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">ZmÄ›nit jazyk</div>
                    <div class="card-block">
                        {if $isLoggedIn}
                            {control languageSelectorForAdmin}
                        {/if}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>