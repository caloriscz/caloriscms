{block content}

<div class="container heading">
    <h1>{control pageTitle $page}</h1>
</div>

<section id="events">
    <div class="container padded-top white">
        <div class="row">
            <div class="col-sm-8">
                {foreach $events as $item}
                    {if date('mY', strtotime($item->date_event)) != $thisMonth}
                        {var $evmonth = Filters::numericmonth(date('n', strtotime($item->date_event)))}
                        <p class="event-month">{var $eventMonthNr = date('n', strtotime($item->date_event))}{_ $evmonth}</p>
                    {/if}
                    <h2>
                        <a href="/{$item->pages->slug}" style="font-size: 0.85em;">
                            {if $item->pages->title == FALSE}
                                {$item->date_event|date:'j. n. Y'}{else}{$item->pages->title}
                            {/if}
                        </a>
                        <span class="pull-right"><small>{$item->date_event|date:'j. n. Y'}</small></span>
                    </h2>
                    <p>{html_entity_decode($item->pages->document)|striptags|truncate:400:'...'}</p>
                    <br/>
                    {var $thisMonth = date('mY', strtotime($item->date_event))}
                {/foreach}

                <div class="text-center">
                    {control paging, $args, $paginator}
                </div>
            </div>
        </div>
    </div>
</section>