{block #titles}{_store.profile.ProfileImage}{/block}
{block content}

<div class="container heading">
    <h1>{_store.profile.ProfileImage}</h1>
</div>

<div class="container">
    <div class="col-md-3">
        <ul class="nav nav-pills nav-stacked">
            <li><a n:href=":Front:Profile:default">{_store.order.ContactInformation}</a></li>
            <li class="active"><a n:href=":Front:Profile:image">{_store.profile.ProfileImage}</a></li>
            <li><a n:href=":Front:Profile:password">{_store.profile.PasswordChange}</a></li>
            <li><a n:href=":Front:Profile:addresses">{_dictionary.main.orders|firstUpper}</a></li>
        </ul>
    </div>
    <div class="col-md-9">
        {foreach $flashes as $flash}
            <div class="flash {$flash->type}">{$flash->message}</div>
        {/foreach}

        {if file_exists($basePath.'images/profiles/portrait-' . $member->id . '.jpg')}
            <img src="{$baseUri}/images/profiles/portrait-{$member->id}.jpg" style="max-width: 120px;"/><br/><br/>
            <a n:href="deletePortrait!" class="btn btn-xs">{_dictionary.main.delete|firstUpper}</a>
        {else}
            {if $member->sex == 1}
                <img src="{$baseUri}/images/foto_woman.jpg"
                     style="visibility: hidden; max-height: 170px; max-width: 200px;"/><br/>
            {else}
                <img src="{$baseUri}/images/foto_man.jpg"
                     style="visibility: hidden; max-height: 170px; max-width: 200px;"/><br/>
            {/if}
        {/if}
        <br/>
        {control changePortraitForm}
    </div>
</div>
